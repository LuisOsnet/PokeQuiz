%div{"data-controller" => "dropbox"}
  %button.relative.group.transition-all.duration-200.focus:overflow-visible.w-max.overflow-hidden.flex.flex-row.items-center.cursor-pointer{"data-action" => "click->dropbox#toggle"}
    .relative
      .p-1.bg-white.rounded-full.focus:outline-none.focus:ring
        %img.w-8.h-8.rounded-full{alt: "avatar", src: "https://upload.wikimedia.org/wikipedia/commons/thumb/5/51/Pokebola-pokeball-png-0.png/769px-Pokebola-pokeball-png-0.png"}
        .top-0.left-7.absolute.w-3.h-3.bg-lime-400.border-2.border-white.rounded-full.animate-ping
        .top-0.left-7.absolute.w-3.h-3.bg-lime-500.border-2.border-white.rounded-full
    .hidden.p-2.sm:block.text-left
      %h2.text-base.font-semibold.text-white.ml-2.hidden.sm:block
        = current_user.username
    = render Icon::ChevronDown::Component.new(class: "w-6 h-6 text-white text-base font-semibold transition duration-75 stroke-1")
  .w-48.mt-3.p-4.bg-gray-800.shadow-lg.absolute.right-0.hidden{"data-dropbox-target" => "content"}
    %ul
      %li
        %a.text-base.font-normal.rounded-lg.cursor-pointer.text-custom-blue-100.hover:text-custom-blue-200.group.transition.duration-75.flex.items-center.py-2
          = render Icon::Logout::Component.new(class: "w-6 h-6 transition duration-75 stroke-1")
          %span.ml-3.text-custom-blue-100.hover:text-custom-blue-200
            = button_to(t("devise.sign_out"), destroy_user_session_path, method: :delete)
